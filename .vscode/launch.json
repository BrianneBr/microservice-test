{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.ts",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js" // Added "build/"
            ],
            // Add to run the watch task when F5 is pressed, but before debugging
            "preLaunchTask": "tsc: watch - tsconfig.json",
            // Opens the debug console while debugging 
            "internalConsoleOptions": "openOnSessionStart"
        },
        // Chrome launch config
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            // Specify the port at the end of the url
            "url": "http://localhost:3000", 
            "webRoot": "${workspaceFolder}"
        },
    ],
    // Combines a combination of configurations
    "compounds": [
        {
            "name": "Launch All",
            "configurations": [
                // The list of configuarations we are combining
                "Launch Program",
                "Launch Chrome"
            ],
            // Add to run the watch task when F5 is pressed, but before debugging
            "preLaunchTask": "tsc: watch - tsconfig.json"
        }
    ]
}